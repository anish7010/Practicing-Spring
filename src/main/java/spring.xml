<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- fully qualified name -->

	<bean id="triangle" class="com.example.demo.Triangle">
		<property name="points">
			<list>
				<ref bean="pointA"></ref>
				<ref bean="pointB"></ref>
				<ref bean="pointC"></ref>
			</list>
		</property>
		<property name="numbers">
			<list>
					<value>1</value>
					<value>2</value>
					<value>3</value>
					<value>4</value>
			</list>
		</property>
	</bean>

	<bean id="pointA" class="com.example.demo.Point">
		<property name="x" value="10"></property>
		<property name="y" value="8"></property>
	</bean>

	<bean id="pointB" class="com.example.demo.Point">
		<property name="x" value="7"></property>
		<property name="y" value="15"></property>
	</bean>

	<bean id="pointC" class="com.example.demo.Point">
		<property name="x" value="3"></property>
		<property name="y" value="20"></property>
	</bean>

</beans>
